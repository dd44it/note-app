{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "note-app": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/note-app",
            "browser": "src/main.ts",
            "server": "src/main.server.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/assets",
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["src/styles.css"],
            "polyfills": ["zone.js"],
            "ssr": {
              "entry": "src/server.ts"
            },
            "outputMode": "server"
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all"
            },
            "development": {
              "sourceMap": true,
              "optimization": false
            }
          }
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "browserTarget": "note-app:build:development"
          },
          "configurations": {
            "production": {
              "browserTarget": "note-app:build:production"
            }
          }
        }
      }
    }
  }
}
